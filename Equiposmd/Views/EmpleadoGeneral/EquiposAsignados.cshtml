@model Equiposmd.Models.EquiposAsignados
@{
    ViewData["Title"] = "Agregar Un Nuevo Equipo";
}
<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Equipo</title>
    <style>
        /* Estilos para el formulario */
        .container {
            margin-top: 15px;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            margin-bottom: 10px; /* Nuevo estilo para el margen inferior */
        }

        .form-check-input {
            margin-right: 10px;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="text-align: center;">Asignar equipo a un empleado</h1>
        <form asp-action="AsignarEquipo" method="post">


            <div class="row">
                <div class="form-group col-md-4">
                    <label>ID del Equipo</label>
                    <input asp-for="ID_del_Equipo" class="form-control">
                    <span asp-validation-for="ID_del_Equipo" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Tipo</label>
                    <input asp-for="Tipo" class="form-control">
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Marca</label>
                    <input asp-for="Marca" class="form-control">
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Color</label>
                    <input asp-for="Color" class="form-control">
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Seleccione la(s) condición(es) del equipo:</label>
                    <div class="form-check">
                        <input type="checkbox" asp-for="Condicion" value="Nueva" class="form-check-input">
                        <label class="form-check-label" asp-for="Condicion">Nueva</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" asp-for="Condicion" value="Usada" class="form-check-input">
                        <label class="form-check-label" asp-for="Condicion">Usada</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" asp-for="Condicion" value="Dañada" class="form-check-input">
                        <label class="form-check-label" asp-for="Condicion">Dañada</label>
                    </div>
                    <span asp-validation-for="Condicion" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Número de serie</label>
                    <input asp-for="Numero_de_serie" class="form-control">
                    <span asp-validation-for="Numero_de_serie" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Fecha de fabricación</label>
                    <input asp-for="Fecha_de_fabricacion" class="form-control">
                    <span asp-validation-for="Fecha_de_fabricacion" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Fecha de adquisición</label>
                    <input asp-for="Fecha_de_adquisicion" class="form-control">
                    <span asp-validation-for="Fecha_de_adquisicion" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Estado</label>
                    <input asp-for="Estado" class="form-control">
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Ubicación Actual</label>
                    <input asp-for="Ubicación_Actual" class="form-control">
                    <span asp-validation-for="Ubicación_Actual" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Asignado</label>
                    <input asp-for="Asignado" class="form-control">
                    <span asp-validation-for="Asignado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-secondary d-block mx-auto">Crear</button>
            </div>
        </form>
        <a asp-controller="Home" asp-action="Historialdeequipo" class="btn btn-link d-block text-center">Volver</a>
    </div>
</body>
</html>
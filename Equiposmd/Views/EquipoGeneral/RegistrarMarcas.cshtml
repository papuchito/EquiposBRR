@model Equiposmd.Models.RegistrarMarcas
@{
    ViewData["Title"] = "Registrar Un Nuevo Equipo";
}

<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Equipo</title>
    <style>
        /* Estilos para el formulario */
        .container {
            margin-top: 8px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            margin-bottom: 10px; /* Nuevo estilo para el margen inferior */
        }

        .form-check-input {
            margin-right: 10px;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="text-align: center;">Registrar Una Nueva Marca</h1>
        <form asp-action="RegistrarMarca" method="post">
            <div class="row">
                <div class="form-group col-md-12">
                    <label>Marca</label>
                    <input asp-for="Marca" class="form-control">
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group mt-3">
                <button type="submit" class="btn btn-secondary d-block mx-auto">Crear</button>
            </div>
        </form>
        <a asp-controller="Home" asp-action="index" class="btn btn-link d-block text-center">Volver</a>
    </div>
</body>
</html>

@model Equiposmd.Models.Mequipo
@{
    ViewData["Title"] = "Agregar Un Nuevo Equipo";
}
<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Equipo</title>
    <style>
        /* Estilos para el formulario */
        .container {
            margin-top: 15px;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }

        .form-check-input {
            margin-right: 10px;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="text-align: center;">Registrar nueva compra de equipo</h1>
        <form asp-action="MEquipo" method="post">

            <div class="row">
                <div class="form-group col-md-4">
                    <label>Tipo</label>
                    <select asp-for="Tipo" class="form-control">
                        <option value=""></option>
                        <option value="Monitor">Monitor</option>
                        <option value="MOUSE">MOUSE</option>
                        <option value="TECLADO">TECLADO</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Marca</label>
                    <select asp-for="Marca" class="form-control">
                        <option value=""></option>
                        <option value="Hp">Hp</option>
                        <option value="Dell">Dell</option>
                        <option value="Lenovo">Lenovo</option>
                    </select>
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Modelo</label>
                    <input asp-for="Modelo" class="form-control">
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Color</label>
                    <select asp-for="Color" class="form-control">
                        <option value=""></option>
                        <option value="Rojo">Rojo</option>
                        <option value="Azul">Azul</option>
                        <option value="Verde">Verde</option>
                        <option value="Amarillo">Amarillo</option>
                        <option value="Naranja">Naranja</option>
                        <option value="Morado">Morado</option>
                        <option value="Rosa">Rosa</option>
                        <option value="Gris">Gris</option>
                        <option value="Negro">Negro</option>
                        <option value="Blanco">Blanco</option>
                        <option value="Marron">Marron</option>
                        <option value="Celeste">Celeste</option>
                        <option value="Turquesa">Turquesa</option>
                        <option value="Oro">Oro</option>
                        <option value="Plata">Plata</option>
                        <option value="Violeta">Violeta</option>
                        <option value="Cian">Cian</option>
                        <option value="Lavanda">Lavanda</option>
                        <option value="Cafe">Cafe</option>
                        <option value="Esmeralda">Esmeralda</option>
                        <option value="Coral">Coral</option>
                        <option value="Granate">Granate</option>
                        <option value="Turmalina">Turmalina</option>
                        <option value="Zafiro">Zafiro</option>
                        <option value="Ambar">Ambar</option>
                        <option value="Indigo">Indigo</option>
                        <option value="Aguamarina">Aguamarina</option>
                        <option value="Carmesi">Carmesi</option>

                    </select>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label">Seleccione la(s) condición(es) del equipo:</label>
                    <div class="form-check">
                        <input type="checkbox" asp-for="Condicion" value="Nueva" class="form-check-input">
                        <label class="form-check-label" asp-for="Condicion">Nueva</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" asp-for="Condicion" value="Usada" class="form-check-input">
                        <label class="form-check-label" asp-for="Condicion">Usada</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" asp-for="Condicion" value="Dañada" class="form-check-input">
                        <label class="form-check-label" asp-for="Condicion">Dañada</label>
                    </div>
                    <span asp-validation-for="Condicion" class="text-danger"></span>
                </div>


                <div class="form-group col-md-4">
                    <label>Numero de activo</label>
                    <input asp-for="Numero_de_activo" class="form-control">
                    <span asp-validation-for="Numero_de_activo" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Numero serial</label>
                    <input asp-for="Numero_serial" class="form-control">
                    <span asp-validation-for="Numero_serial" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Fecha fabricacion</label>
                    <input asp-for="Fecha_fabricacion" class="form-control">
                    <span asp-validation-for="Fecha_fabricacion" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>fecha de adquisicion</label>
                    <input asp-for="fecha_adquisicion" class="form-control">
                    <span asp-validation-for="fecha_adquisicion" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Fecha de expiracion garantia 1</label>
                    <input asp-for="Fecha_expiracion_garantia_1" class="form-control">
                    <span asp-validation-for="Fecha_expiracion_garantia_1" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Fecha expiracion garantia 2</label>
                    <input asp-for="Fecha_expiracion_garantia_2" class="form-control">
                    <span asp-validation-for="Fecha_expiracion_garantia_2" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label>Fecha final de vida util</label>
                    <input asp-for="Fecha_final_vida_util" class="form-control">
                    <span asp-validation-for="Fecha_final_vida_util" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4">
                    <label>Fecha de descarte</label>
                    <input asp-for="Fecha_descarte" class="form-control">
                    <span asp-validation-for="Fecha_descarte" class="text-danger"></span>
                </div>
           


            <div class="form-group col-md-4">
                <label>Precio</label>
                    <input asp-for="Precio" class="form-control">
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>



            <div class="form-group col-md-4">
                <label>Cantidad</label>
                <input asp-for="Cantidad" class="form-control">
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
    </div>




    <div class="form-group mt-3">
                <button type="submit" class="btn btn-secondary d-block mx-auto">Crear</button>
            </div>
        </form>
        <a asp-controller="Home" asp-action="index" class="btn btn-link d-block text-center">Volver</a>
    </div>
</body>
</html>

@model Equiposmd.Models.SolicitudEquipo
 

<h2>Nueva Solicitud de Equipo</h2>
<head>
    <title>Formulario de empleado</title>
<style>
    /* Estilos para el formulario */
    .container {
        margin-top: 7.5px;
        padding: 7.5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }

    .form-check-input {
        margin-right: 10px;
    }

    .text-danger {
        color: red;
    }
</style>
</head>
<form asp-action="NuevaSolicitud" method="post">
    <div class="row">

        <div class="form-group col-md-4">
            <label>Area Solicitada:</label>
            <input asp-for="Areasolicitada" class="form-control" />
            <span asp-validation-for="Areasolicitada" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label>Tipo de Equipo:</label>
            <input asp-for="TipoEquipo" class="form-control" />
            <span asp-validation-for="TipoEquipo" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label>Procesador:</label>
            <input asp-for="Procesador" class="form-control" />
            <span asp-validation-for="Procesador" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label>Memoria RAM:</label>
            <input asp-for="MemoriaRam" class="form-control" />
            <span asp-validation-for="MemoriaRam" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label>Disco Duro:</label>
            <input asp-for="DiscoDuro" class="form-control" />
            <span asp-validation-for="DiscoDuro" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label>Tarjeta Grafica:</label>
            <input asp-for="TarjetaGrafica" class="form-control" />
            <span asp-validation-for="TarjetaGrafica" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label>Marca:</label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
  </div>
   

       
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary d-block mx-auto">Crear</button>
    </div>
</form>

<a asp-controller="Home" asp-action="Historialdeequipo" class="btn btn-link d-block text-center">Volver</a>



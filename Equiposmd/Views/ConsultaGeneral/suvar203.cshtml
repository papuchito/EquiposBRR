@model Equiposmd.Models.suvar203
@{
    ViewData["Title"] = "Agregar Un Nuevo Empleado";
}

<!DOCTYPE html>
<html>
<head>
    <title>Formulario de empleado</title>
    <style>
        .container {
            margin-top: 7.5px;
            padding: 7.5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>

    <!-- Contenedor 1 -->
    <div class="container">
        <h1 style="text-align: right;">Traslado Mobiliario,Equipo y Obras De Arte</h1>
        <form asp-action="suvar203" method="post">

            <div class="row">
                <!-- Primera parte del formulario -->
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>
                            Unidad Emisora
                            <small class="text-muted"></small>
                        </h6>
                        <input asp-for="UnidadEmisora" class="form-control">
                        <span asp-validation-for="UnidadEmisora" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>
                            Codigo
                            <small class="text-muted"></small>
                        </h6>
                        <input asp-for="Codigo" class="form-control" oninput="validarNumeroActivo(this)">
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>

                </div>

               
                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>
                                Fecha
                                <small class="text-muted"></small>
                            </h6>
                        <input asp-for="Fecha" class="form-control" type="date">
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>
                            Departamento/Ubicacion
                            <small class="text-muted"></small>
                        </h6>
                        <input asp-for="Ubicacion" class="form-control">
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>
                
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>
                            Telefono
                            <small class="text-muted"></small>
                        </h6>
                        <input asp-for="Telefono" class="form-control">
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>
                            Oficina/Unidad receptora
                            <small class="text-muted"></small>
                        </h6>
                        <input asp-for="Oficina" class="form-control">
                        <span asp-validation-for="Oficina" class="text-danger"></span>
                    </div>
                
                </div>

                
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>
                            Codigo
                            <small class="text-muted"></small>
                        </h6>
                        <input asp-for="CodigoReceptor" class="form-control" oninput="validarNumeroActivo(this)">
                        <span asp-validation-for="CodigoReceptor" class="text-danger"></span>
                    </div>

                </div>
            </div>



            <!-- Contenedor 2 -->
            <div class="container">
                <h1 style="text-align: left;">Mobiliario(s) Equipo(s) y/o Obras de Arte a Trasladar</h1>

                <div class="row">
                    <!-- Segunda parte del formulario -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>
                                Numero De Activo
                                <small class="text-muted"></small>
                            </h6>
                            <input asp-for="Numero_de_activo" class="form-control" oninput="validarNumeroActivo(this)">
                            <span asp-validation-for="Numero_de_activo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>
                                Descripcion
                                <small class="text-muted"></small>
                            </h6>
                            <input asp-for="Descripcion" class="form-control">
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>
                                Modelo
                                <small class="text-muted"></small>
                            </h6>
                            <input asp-for="Modelo" class="form-control">
                            <span asp-validation-for="Modelo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <h6>
                            Marca
                            <small class="text-muted"></small>
                        </h6>
                        <select asp-for="Marca" class="form-control">
                            <option value=""></option>
                            <option value="Hp">Hp</option>
                            <option value="Dell">Dell</option>
                            <option value="Lenovo">Lenovo</option>
                            <option value="Acer">Acer</option>
                            <option value="Asus">Asus</option>
                            <option value="Apple">Apple</option>
                            <option value="Sony">Sony</option>
                            <option value="Samsung">Samsung</option>
                            <option value="Toshiba">Toshiba</option>
                            <option value="Microsoft">Microsoft</option>
                            <option value="Panasonic">Panasonic</option>
                            <option value="LG">LG</option>
                            <option value="IBM">IBM</option>
                            <option value="Gateway">Gateway</option>
                            <option value="Fujitsu">Fujitsu</option>
                            <option value="Compaq">Compaq</option>
                            <option value="MSI">MSI</option>
                            <option value="Alienware">Alienware</option>
                            <option value="Xiaomi">Xiaomi</option>
                            <option value="Huawei">Huawei</option>
                            <option value="Google">Google</option>
                            <option value="Razer">Razer</option>
                            <option value="Corsair">Corsair</option>
                            <option value="Philips">Philips</option>
                            <option value="Bosch">Bosch</option>
                            <option value="Dyson">Dyson</option>
                            <option value="D-Link">D-Link</option>
                            <option value="Linksys">Linksys</option>
                            <option value="Netgear">Netgear</option>
                            <option value="Canon">Canon</option>
                            <option value="Nikon">Nikon</option>
                            <option value="GoPro">GoPro</option>
                            <option value="DJI">DJI</option>
                            <option value="Garmin">Garmin</option>
                            <option value="Fitbit">Fitbit</option>
                            <option value="Xerox">Xerox</option>
                            <option value="Lexmark">Lexmark</option>
                            <option value="Bose">Bose</option>
                            <option value="JBL">JBL</option>
                            <option value="Sennheiser">Sennheiser</option>
                            <option value="Audio-Technica">Audio-Technica</option>
                            <option value="Western Digital">Western Digital</option>
                            <option value="Seagate">Seagate</option>
                            <option value="Sandisk">Sandisk</option>

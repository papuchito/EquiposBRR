                        </select>
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>
                                Numero De Serie
                                <small class="text-muted"></small>
                            </h6>
                            <input asp-for="Numerodeserie" class="form-control">
                            <span asp-validation-for="Numerodeserie" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <h6>
                            Color
                            <small class="text-muted"></small>
                        </h6>
                        <select asp-for="Color" class="form-control">
                            <option value=""></option>
                            <option value="Rojo">Rojo</option>
                            <option value="Azul">Azul</option>
                            <option value="Verde">Verde</option>
                            <option value="Amarillo">Amarillo</option>
                            <option value="Naranja">Naranja</option>
                            <option value="Morado">Morado</option>
                            <option value="Rosa">Rosa</option>
                            <option value="Gris">Gris</option>
                            <option value="Negro">Negro</option>
                            <option value="Blanco">Blanco</option>
                            <option value="Marron">Marron</option>
                            <option value="Celeste">Celeste</option>
                            <option value="Turquesa">Turquesa</option>
                            <option value="Oro">Oro</option>
                            <option value="Plata">Plata</option>
                            <option value="Violeta">Violeta</option>
                            <option value="Cian">Cian</option>
                            <option value="Lavanda">Lavanda</option>
                            <option value="Cafe">Cafe</option>
                            <option value="Esmeralda">Esmeralda</option>
                            <option value="Coral">Coral</option>
                            <option value="Granate">Granate</option>
                            <option value="Turmalina">Turmalina</option>
                            <option value="Zafiro">Zafiro</option>
                            <option value="Ambar">Ambar</option>
                            <option value="Indigo">Indigo</option>
                            <option value="Aguamarina">Aguamarina</option>
                            <option value="Carmesi">Carmesi</option>

                        </select>
                        <span asp-validation-for="Color" class="text-danger"></span>
                    
                    </div>

                    <div class="form-group col-md-4">
                        <h6>
                            Condicion
                            <small class="text-muted"></small>
                        </h6>
                        <select asp-for="Condicion" class="form-control">
                            <option value=""></option>
                            <option value="Nueva">Nueva</option>
                            <option value="Usada">Usada</option>
                            <option value="Dañada">Dañada</option>

                        </select>
                        <span asp-validation-for="Condicion" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>
                                Observaciones
                                <small class="text-muted"></small>
                            </h6>
                            <input asp-for="Observaciones" class="form-control">
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-secondary d-block mx-auto">Crear</button>
            </div>
        </form>

        <a asp-controller="Home" asp-action="Historialdeequipo" class="btn btn-link d-block text-center">Volver</a>
    </div>

</body>
</html>
@section Scripts {
    <script>
        function validarNumeroActivo(input) {
            // Eliminar cualquier caracter que no sea un número, la letra 'E', o el número '0'
            input.value = input.value.replace(/[^0-9Ee]|^0+/g, '');

            // Convertir la letra 'E' ingresada a mayúscula
            input.value = input.value.toUpperCase();
        }
    </script>
}
                        <option value="Smartphone">Smartphone</option>
                        <option value="Altavoz">Altavoz</option>
                        <option value="Auriculares">Auriculares</option>
                        <option value="Cámara">Cámara</option>
                        <option value="Proyector">Proyector</option>
                        <option value="Router">Router</option>
                        <option value="Servidor">Servidor</option>
                        <option value="Escáner">Escáner</option>
                        <option value="Computadora de Escritorio">Computadora de Escritorio</option>
                        <option value="Disco Duro">Disco Duro</option>
                        <option value="Tarjeta de Video">Tarjeta de Video</option>
                        <option value="Memoria RAM">Memoria RAM</option>
                        <option value="Unidad de Estado Sólido (SSD)">Unidad de Estado Sólido (SSD)</option>
                        <option value="Ordenador Portátil">Ordenador Portátil</option>
                        <option value="Escáner de Documentos">Escáner de Documentos</option>
                        <option value="Impresora Multifunción">Impresora Multifunción</option>
                        <option value="Terminal Punto de Venta (TPV)">Terminal Punto de Venta (TPV)</option>
                        <option value="Cajero Automático">Cajero Automático</option>
                        <option value="Dispositivo de Seguridad Biométrica">Dispositivo de Seguridad Biométrica</option>
                        <option value="Terminal de Autoconsulta">Terminal de Autoconsulta</option>
                        <option value="Dispositivo de Firma Electrónica">Dispositivo de Firma Electrónica</option>
                        <option value="Contador de Billetes">Contador de Billetes</option>
                        <option value="Tarjeta de Identificación">Tarjeta de Identificación</option>
                        <option value="Dispositivo de Almacenamiento Seguro">Dispositivo de Almacenamiento Seguro</option>
                        <option value="Sistema de Videovigilancia">Sistema de Videovigilancia</option>
                        <option value="Cámara de Seguridad">Cámara de Seguridad</option>
                        <option value="Router de Seguridad">Router de Seguridad</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>


                <div class="form-group col-md-4">
                    <h6>
                        Marca
                        <small class="text-muted"></small>
                    </h6>
                    <select asp-for="Marca" class="form-control" required>
